# Django Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://anythingllm:anythingllm@db:5432/anythingllm
# For SQLite (development): sqlite:///db.sqlite3

# Redis Configuration (for Celery and Channels)
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_LIFETIME=60  # minutes
JWT_REFRESH_TOKEN_LIFETIME=7  # days

# Storage Configuration
MEDIA_ROOT=/workspace/django_server/storage
MEDIA_URL=/media/
STATIC_ROOT=/workspace/django_server/staticfiles
STATIC_URL=/static/

# LLM Provider Configuration
LLM_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_API_KEY=your-anthropic-api-key
COHERE_API_KEY=your-cohere-api-key

# Embedding Configuration
EMBEDDING_ENGINE=openai
EMBEDDING_MODEL=text-embedding-ada-002

# Vector Database Configuration
VECTOR_DB=pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
QDRANT_URL=http://localhost:6333
CHROMA_URL=http://localhost:8000
WEAVIATE_URL=http://localhost:8080

# Multi-User Mode
MULTI_USER_MODE=True
DISABLE_TELEMETRY=True

# Server Configuration
SERVER_PORT=8000
ENABLE_HTTPS=False

# File Upload Limits
FILE_UPLOAD_MAX_SIZE=3221225472  # 3GB in bytes
DATA_UPLOAD_MAX_MEMORY_SIZE=3221225472  # 3GB in bytes

# Session Configuration
SESSION_COOKIE_AGE=86400  # 24 hours in seconds
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True

# Email Configuration (for password reset)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# Logging
LOG_LEVEL=INFO
LOG_FILE=/workspace/django_server/logs/anythingllm.log

# Telemetry
TELEMETRY_ENABLED=False
POSTHOG_API_KEY=your-posthog-api-key
POSTHOG_HOST=https://app.posthog.com